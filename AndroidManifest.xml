<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	  package="com.mamewo.podplayer0"
	  android:versionCode="10"
	  android:installLocation="auto"
	  android:versionName="1.0.0" >

  <uses-sdk android:minSdkVersion="10"
	    android:targetSdkVersion="10"/>
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <!-- TODO: REMOVE BEFORE RELEASE: To test using robotium -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <application
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:allowBackup="true">
    <provider android:name="EpisodeProvider"
              android:authorities="com.mamewo.podplayer0.provider" />
    <activity
        android:name="MainActivity"
        android:label="@string/app_name"
        android:launchMode="singleTask" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
        android:name="PodplayerExpActivity"
        android:label="podplayer_exp"
        android:launchMode="singleTask">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
        android:name="PodplayerActivity"
        android:label="podplayer_list"
        android:launchMode="singleTask">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
        android:name="PodplayerDBActivity"
        android:label="db_list"
        android:launchMode="singleTask">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="PodplayerPreference" />
    <activity android:name="PodcastListPreference" />
    <receiver android:name="PlayerService$Receiver">
      <intent-filter>
        <action android:name="com.mamewo.podplayer0.STOP_MUSIC_ACTION"/>
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </receiver>
    <service android:name="PlayerService" />
  </application>
</manifest>
