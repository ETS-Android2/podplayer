<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="horizontal"
      android:layout_weight="8"
      >
    <ImageView
        android:id="@+id/podcast_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="54dp"
        android:maxWidth="54dp"
        android:layout_marginRight="4dp"
        android:contentDescription="xxx"
        android:focusable="false"
      />
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_height="fill_parent"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
	android:layout_width="0dp"
	android:layout_weight="1"       
        />
    <TextView
        android:id="@+id/podcast_title_label"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:singleLine="false"
        android:maxLines="2"
        android:gravity="center_vertical|left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <ImageButton
        android:id="@+id/detail_button"
        android:src="@drawable/ic_expand_more_white_24dp"
        android:layout_height="fill_parent"
	android:layout_width="0dp"
	android:layout_weight="1"
        android:contentDescription="@string/icon_desc_podcast_detail"
        />
  </LinearLayout>
  <!--     android:width="0dip" -->
  <TextView
      android:id="@+id/podcast_url"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp"
      android:layout_marginRight="4dp"
      android:singleLine="false" 
      android:textAppearance="?android:attr/textAppearanceSmall"
      />
  <LinearLayout
      android:id="@+id/podcast_detail"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="4"
      android:visibility="gone"
      >
    <ImageButton
        android:id="@+id/move_down"
	android:layout_width="0dp"
	android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_downward_white_24dp"
        android:contentDescription="move down"
        />
    <ImageButton
        android:id="@+id/move_up"
	android:layout_width="0dp"
	android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_upward_white_24dp"
        android:contentDescription="move up"
        />
    <ImageButton
        android:id="@+id/remove"
	android:layout_width="0dp"
	android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_white_24dp"
        android:contentDescription="remove"
        />
    <ImageButton
        android:id="@+id/status_icon"
	android:layout_width="0dp"
	android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_public_white_24dp"
        android:contentDescription="status"
        />
  </LinearLayout>
  <!--TODO:  add androd:hint -->
  <LinearLayout 
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:visibility="gone">

  <EditText
      android:id="@+id/username"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="user name if required"
      android:text="" />
  <EditText
      android:id="@+id/password"
      android:inputType="textPassword"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="password if required"
      android:text="" />
  <Button
      android:id="@+id/auth_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="enter password"
      />
  </LinearLayout>
</LinearLayout>
