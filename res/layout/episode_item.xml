<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
  <ImageView
      android:id="@+id/episode_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:maxHeight="54dp"
      android:maxWidth="54dp"
      android:layout_marginLeft="2dp"
      android:focusable="false"
      android:layout_alignParentLeft="true" />

  <LinearLayout 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_alignParentLeft="true"
      android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
      <!--  visibility of image view below is changed by code, so compound image is not suitable -->
      <ImageView
          android:id="@+id/play_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:focusable="false"
          android:src="@android:drawable/ic_media_play"
          android:tint="#9E9"
          android:visibility="gone" />
      <TextView
          android:id="@+id/episode_title"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
	  android:lines="2"
          android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    <TextView
        android:id="@+id/episode_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/episode_listened"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall" />
  </LinearLayout>
  <CheckBox
      android:id="@+id/listened_check"
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:layout_alignParentRight="true"
      android:focusable="false"
      android:clickable="true"
      />
</RelativeLayout>
  
