<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.mamewo.podplayer0.MultiListPreference
        android:defaultValue="http://www.nhk.or.jp/rj/podcast/rss/english.xml!http://feeds.voanews.com/ps/getRSS?client=Standard&amp;PID=_veJ_N_q3IUpwj2Z5GBO2DYqWDEodojd&amp;startIndex=1&amp;endIndex=500!http://computersciencepodcast.com/compucast.rss!http://www.discovery.com/radio/xml/news.xml!http://downloads.bbc.co.uk/podcasts/worldservice/tae/rss.xml!http://feeds.wsjonline.com/wsj/podcast_wall_street_journal_this_morning?format=xml"
        android:entries="@array/pref_podcastlist_keys"
        android:entryValues="@array/pref_podcastlist_urls"
        android:key="podcastlist"
        android:title="@string/pref_podcastlist_title" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:enabled="true"
        android:key="pause_on_unplugged"
        android:selectable="true"
        android:summaryOff="play after unplugged"
        android:summaryOn="pause on unplugged"
        android:title="Pause on unplagged" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="use_expandable_ui"
        android:summaryOff="pull to update UI"
        android:summaryOn="expandable list UI"
        android:title="Use expandable list UI" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="expand_in_default"
        android:summaryOff="collapse"
        android:summaryOn="expand"
        android:title="Expand list in default" android:dependency="use_expandable_ui"/>
<CheckBoxPreference
        android:defaultValue="false"
        android:key="show_podcast_icon"
        android:summaryOff="hide"
        android:summaryOn="show"
        android:title="Show podcast icon" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="enable_long_click"
        android:summaryOff="off"
        android:summaryOn="on"
        android:title="Open link on long click" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="load_on_start"
        android:summaryOff="Do not load automatically"
        android:summaryOn="Load podcasts when app starts."
        android:title="Autoload podcast" />

    <ListPreference
        android:defaultValue="30"
        android:dialogTitle="Read timeout"
        android:entries="@array/pref_timeout_titles"
        android:entryValues="@array/pref_timeout_values"
        android:key="read_timeout"
        android:title="Read timeout" />

    <PreferenceCategory android:title="Gesture" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="enable_gesture"
            android:summaryOff="gesture off"
            android:summaryOn="gesture on"
            android:title="Use gesture" />

        <com.mamewo.podplayer0.DoublePreference
            android:defaultValue="3.0"
            android:key="gesture_score_threshold"
            android:title="Threshold of score" />

        <PreferenceScreen
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:key="gesture_list"
            android:title="Gesture list" >
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory android:title="Others" >
        <Preference
            android:key="license"
            android:selectable="true"
            android:title="License" />
        <Preference
            android:key="version"
            android:selectable="true"
            android:title="Version" />
    </PreferenceCategory>

</PreferenceScreen>